<div class="backdrop"></div>
<header class="main-header">
    <img src="/BlueJayGuitars.png" class="logo"/>
    <nav class="main-header__nav">
        <ul class="main-header__item-list">
            <li class="main-header__item">
                <a class="<%= path === '/products' ? 'active' : '' %>" href="/products"><i class="fas fa-guitar"></i> Guitars</a>
            </li>
            <% if (isAuthenticated) { %>
            <li class="main-header__item">
                <a class="<%= path === '/cart' ? 'active' : '' %>" href="/cart"><i class="fas fa-shopping-cart"></i> Cart</a>
            </li>
            <li class="main-header__item">
                <a class="<%= path === '/orders' ? 'active' : '' %>" href="/orders"><i class="fas fa-shipping-fast"></i> Orders</a>
            </li>
                <li class="main-header__item">
                    <a class="<%= path === '/admin/add-guitar' ? 'active' : '' %>" href="/admin/add-guitar"><i class="fas fa-plus"></i> Add Guitar
                    </a>
                </li>
                <li class="main-header__item">
                    <a class="<%= path === '/admin/products' ? 'active' : '' %>" href="/admin/products"><i class="fas fa-user-cog"></i> Admin
                    </a>
                </li>
            <% } %>
        </ul>
        <% if (!isAuthenticated) { %>
            <ul class="main-header__item-list">
                <li class="main-header__item">
                    <a class="<%= path === '/login' ? 'active' : '' %>" href="/login">Login</a>
                </li>
                <li class="main-header__item">
                    <a class="<%= path === '/signup' ? 'active' : '' %>" href="/signup">Signup</a>
                </li>
            </ul>
        <% } else {%>
            <ul class="main-header__item-list">
                <li class="main-header__item"> 
                    <form action="/logout" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="submit">Logout</button>
                    </form>
                </li>
            </ul>
        <% } %>
    </nav>
</header>